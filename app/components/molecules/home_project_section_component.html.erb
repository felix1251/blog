<section class="container my-12" data-home-target="homeSectionTwo">
    <%= section_header_component title: "Some projects I worked on",
        highlight: "Building awesome projects for awesome people",
        has_more: true,
        url: "/projects",
        redirect_title: "Browse more"
    %>
    <turbo-frame id="projects" class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-10" src="/projects?turbo_stream=none">
        <% (1..4).each do %>
            <%= project_card_component %>
        <% end %>
     </turbo-frame>
</section>