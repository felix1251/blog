<div class="cursor-pointer transform transition duration-100 hover:scale-110 border dark:border-2 border-gray-300 rounded-lg hover:shadow-sm dark:bg-dark dark:border-gray-700">
    <% if project.present? && project.img %> 
        <img class="rounded-t-lg w-full h-[190px] md:h-[180px] object-cover" src="<%= project.img %>" alt="" />
    <% else %>
        <div class="animate-pulse duration-50 rounded-t-lg w-full h-[190px] md:h-[180px] bg-gray-200"></div>
    <% end %>
    <div class="p-5">
        <% if project.present? && project.title %> 
            <h5 class="mb-2 text-xl font-medium tracking-tight primary-text-color"><%= project.title %></h5>
        <% else %>
            <div class="animate-pulse bg-gray-200 h-5 w-full mb-3"></div>
        <% end %>
        <% if project.present? && project.content %> 
            <p class="font-normal text-gray-500 dark:text-gray-400"><%= project.content %></p>
        <% else %>
            <div class="animate-pulse bg-gray-200 h-4 w-10/12 mb-2"></div>
            <div class="animate-pulse bg-gray-200 h-4 w-7/12 mb-2"></div>
            <div class="animate-pulse bg-gray-200 h-4 w-8/12"></div>
        <% end %>
    </div>
</div>
