<section class="container py-16" data-home-target="homeSectionTwo">
    <%= render "components/atoms/section_header", 
        title: "Some projects I worked on" ,
        highlight: "Building awesome projects for awesome people",
        has_more: true,
        redirect_title: "Browse more"
    %>
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-8">
        <% @data_hash["projects"].each do |project| %>
             <%= render "components/atoms/project_card", project: project %>
        <% end %>
    </div>
</section>