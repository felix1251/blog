<main class="flex-1 container my-4 grid grid place-items-center">
  <div class="bg-white dark:bg-dark border border-gray-300 dark:border-2 dark:border-gray-700  w-fit p-6 rounded-xl shadow-md">
    <h2 class="text-xl text-center uppercase font-medium text-main mb-3">Log in / Sign-In</h2>
    <% if notice %>
      <p class="text-red-500"><%= notice %></p>
    <% end %>
    <% if alert %>
      <p class="text-red-500"><%= alert %></p>
    <% end %>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name), data: { turbo: false }) do |f| %>
      <div class="field my-2">
        <%= f.label :email, class: "primary-text-color" %><br />
        <%= f.email_field :email, required: true , autofocus: true, autocomplete: "email", class: "block dark:bg-dark dark:text-white rounded-md border outline-none px-3 py-2 mt-2" %>
      </div>

      <div class="field">
        <%= f.label :password, class: "primary-text-color" %><br />
        <%= f.password_field :password, required: true,  autocomplete: "current-password", class: "block dark:bg-dark dark:text-white rounded-md border outline-none px-3 py-2 mt-2" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="field mt-3 flex items-center gap-2">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me, class: "primary-text-color" %>
        </div>
      <% end %>

      <div class="actions mt-3 mb-2">
        <%= f.submit "Log in", class: "px-5 py-1.5 text-white bg-main rounded-lg font-medium cursor-pointer" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</main>


