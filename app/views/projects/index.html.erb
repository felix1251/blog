<main class="flex-1 container mt-6 mb-4">
  <% if user_signed_in? %>
    <%= render "components/atoms/button", type: "create", text: "Create new project", link: new_project_path(@project) %>
  <% end %>
  <%= turbo_frame_tag "projects", class: "grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-10" do %>
      <% @projects.each do |project| %>
        <%= render "components/atoms/project_card", project: project %>
      <% end %>
  <% end %>
</main>

