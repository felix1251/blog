<main class="flex-1">
  <%= page_header_component title: "Some projects I worked on", highlight: "Building awesome projects for awesome people" %>
  <% if user_signed_in? %>
    <div class="container mt-6 -mb-6">
      <%= button_component type: "create", link: new_project_path(@project), text: "Create new project", additionalClass: "mb-8" %>
    </div>
  <% end %>
  <%= turbo_frame_tag "page_handler" %>
  <div id="projects" class= "container py-6 grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-10">
    <%= project_list_component projects: @projects %>
  </div>
  <%= render "pager", pagy: @pagy %>
</main>