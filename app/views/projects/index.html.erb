<main class="flex-1 container py-6">
  <% if user_signed_in? %>
    <%= button_component type: "create", link: new_project_path(@project), text: "Create new project", additionalClass: "mb-8" %>
  <% end %>
  <%= turbo_frame_tag "page_handler" %>
  <div id="projects" class= "grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-10">
    <%= project_list projects: @projects %>
  </div>
  <%= render "pager", pagy: @pagy %>
</main>